<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_seeker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menu"
    tools:context="com.example.faranak.mine_seeker.MineSeeker">

    <Button
        android:text="Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHelp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btnOption"
        android:layout_alignLeft="@+id/btnOption"
        android:layout_alignStart="@+id/btnOption"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:text="Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOption"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/btnPlayGame"
        android:layout_alignLeft="@+id/btnPlayGame"
        android:layout_alignStart="@+id/btnPlayGame" />

    <Button
        android:text="Play Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/btnPlayGame"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
